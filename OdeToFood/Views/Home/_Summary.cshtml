@model Restaurant

<div class="panel panel-primary">
	<h3 class="panel-heading">@Model.Name</h3>
	<div class="panel-body">
		Cuisine: @Model.Cuisine
	</div>
	<div class="panel-footer">
		<a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">More</a>
		<a class="btn btn-info" asp-page="/Restaurants/Edit" asp-route-id="@Model.Id">Edit</a>
	</div>
</div>